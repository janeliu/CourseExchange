
<legend> Adding new course with SLN</legend>
<%= form_for @course do |f| %> 
   <label> <%= f.label :SLN, "Course SLN" %></label>
    <%= f.text_field :SLN %>
  <%  @course.registrations.build %>
  <%= f.fields_for :registrations do |builder| %>
    <%= builder.label :kind, "Add as" %>
    <%= builder.select :kind, ["wanted","available"] %>
  <% end %>

  <div id="line" ><%= f.submit 'add', :class => 'btn btn-primary'%> </div>

<% end %>


<%= link_to 'Back', accounts_path, class: 'btn btn-small' %>
